extend ../layouts/main-layout.pug
block styles 
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")
block content 
  main
  form.login-form(action='/new-password' method='POST')
    if errorMessage 
      div.flash #{errorMessage}
    input(type="hidden" name="_csrf" value=csrfToken)
    input(type="hidden" name="userId" value=userId)
    input(type="hidden" name="passwordToken" value=passwordToken)
    .form-control
      label(for='newPassword') New Password
      input#title(type='password', name='newPassword')
      label(for='passwordConfirmation') Password Confirmation
      input#title(type='password', name='passwordConfirmation')
    button.btn(type='submit') Reset Password