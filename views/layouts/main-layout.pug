doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(rel="stylesheet", href="/css/main.css")
    block styles
  body 
    .backdrop
    header.main-header
      button#side-menu-toggle Menu
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a.path(class=(path === '/' ? 'active' : '') href='/') Shop
          li.main-header__item
            a.path(class=(path === '/products' ? 'active' : '') href='/products') Products
          if isAuthenticated
            li.main-header__item
              a.path(class=(path === '/cart' ? 'active' : '') href='/cart') Cart
            li.main-header__item
              a.path(class=(path === '/orders' ? 'active' : '') href='/orders') Orders
            li.main-header__item
              a.path(class=(path === '/admin/add-product' ? 'active' : '') href='/admin/add-product') Add Product
            li.main-header__item
              a.path(class=(path === '/admin/products' ? 'active' : '') href='/admin/products') Admin Products
        ul.main-header__item-list 
          if !isAuthenticated
            li.main-header__item
              a.path(href='/login') Login
            li.main-header__item
              a.path(href='/sign-up') Sign Up
          else
            li.main-header__item
              form(action="/logout" method='POST')
                input(type="hidden" name="_csrf" value=csrfToken)
                button(type='submit') Logout 
